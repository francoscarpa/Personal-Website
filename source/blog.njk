{%- for post in collections.articles | reverse -%}
   <p class="metadata">
      <span>{{post.date.getFullYear() + "." + (post.date.getMonth() + 1) + "." + post.date.getDate()}}</span>
      {% if post.data.updated %} ⟶ <span>{{post.data.updated}}</span>
      {% endif %}
   </p>
   <p class="link">
      <a href="{{ post.url }}">{{ post.data.h1 }}</a>
   </p>
{%- endfor -%}