   <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#ce1212">
   <meta name="msapplication-TileColor" content="#ce1212">
   <meta name="theme-color" content="#ce1212">
   <link rel="stylesheet" href="/Style/Style.css">
</head>

<body>
   <nav>
      {% for NavPage in collections.MainNavPages %}
         <a href="{{ NavPage.url }}">{{ NavPage.data.h1 }}</a>
      {% endfor %}
   </nav>
   <header>
      <h1>{{ h1 | safe }}</h1>
   </header>
   <main>{{ content | safe }}</main>
   <footer>
